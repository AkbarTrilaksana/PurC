#!/usr/bin/purc

<!-- The expected output of this HVML program:

Current time: 00:00
Current time: 00:03
Current time: 00:01
Current time: 00:02
Current time: 00:07
Current time: 00:04
Current time: 00:08
Current time: 00:05
Current time: 00:03
Current time: 00:00

I slept for 50 seconds totally
-->

<!DOCTYPE hvml SYSTEM "v: MATH">
<hvml target="void">

    <init as startTime with $SYSTEM.time_us />

    <iterate on 0 onlyif $L.lt($0<, 10) with $MATH.add($0<, 1) nosetotail >
        <sleep with $SYSTEM.random(10.0) >
            $STREAM.stdout.writelines($STR.join('Current time: ',
                        $SYSTEM.time("%H:%m")))
        </sleep>
    </iterate>

    {{
        $STREAM.stdout.writelines($STR.join("I slept for ",
                    $MATH.sub($SYSTEM.time_us, $startTime), " seconds totally"));
        $MATH.sub($SYSTEM.time_us, $startTime)
    }}
</hvml>
