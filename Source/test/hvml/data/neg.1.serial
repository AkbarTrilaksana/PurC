<!DOCTYPE hvml>
<hvml target="html">
    <body>
        <input type="text" name="user-name" id="the-user-name" placeholder="Your Name" value=""/>
        <bind on=get_element(get_element(call_getter(get_element(get_variable("DOC"),"query"),"#the-user-name"),"attr"),"value") as="user_name">
            <observe on=get_variable("user_name") for="change">
            </observe>
        </bind>
    </body>
</hvml>

